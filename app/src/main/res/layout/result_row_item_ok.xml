<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff37ff10">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Text"
        android:textSize="30dp"
        android:id="@+id/tvQuestionNumber"
        android:layout_gravity="center_horizontal"
        android:layout_weight="@integer/int_result_row_num" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Text"
        android:textSize="30dp"
        android:id="@+id/tvGivenAnswer"
        android:layout_gravity="center_horizontal"
        android:layout_weight="@integer/int_result_row_given_answer" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Text"
        android:textSize="30dp"
        android:id="@+id/tvAnswerTime"
        android:layout_weight="@integer/int_result_row_answer_time" />
</LinearLayout>